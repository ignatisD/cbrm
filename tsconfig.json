{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "declaration": true,
        "outDir": "./lib",
        "allowSyntheticDefaultImports": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/@types"
        ]
    },
    "include": [
        "./src/index.ts"
    ],
    "exclude": [
        "./node_modules",
        "./lib",
        "./tests/**/*",
    ]
}
